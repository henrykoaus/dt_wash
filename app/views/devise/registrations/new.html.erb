<div class="pokemon-signup-container">
  <div class="pokemon-card">
    <h2 class="pokemon-title">Sign Up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "pokemon-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username,
                    required: true,
                    label: "Username",
                    input_html: { autocomplete: "username", class: "pokemon-input" } %>

        <%= f.input :email,
                    required: true,
                    label: "Email",
                    input_html: { autocomplete: "email", class: "pokemon-input" } %>

        <%= f.input :password,
                    required: true,
                    label: "Password",
                    input_html: { autocomplete: "new-password", class: "pokemon-input", placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) } %>

        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirm Password",
                    input_html: { autocomplete: "new-password", class: "pokemon-input" } %>

<!--        <div class="avatar-selection">-->
<!--          <label>Select an avatar:</label>-->
<!--          <div class="avatars">-->
            <%# Dir.glob(Rails.root.join('app/assets/images/avatars/*')).each do |avatar| %>
<!--              <label>-->
                <%#= f.fields_for :profile do |pf| %>
                  <%#= pf.radio_button :photo, File.basename(avatar) %>
                <%# end %>
                <%#= image_tag "avatars/#{File.basename(avatar)}", size: "50x50" %>
<!--              </label>-->
            <%# end %>
<!--          </div>-->
<!--        </div>-->

        <%= f.input :role, as: :radio_buttons,
                    collection: [
                      ['Customer', :customer],
                      ['Merchant', :merchant]
                    ],
                    label: "Sign up as:",
                    required: true,
                    item_wrapper_class: "pokemon-radio" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "âš¡ Sign Up!", class: "pokemon-button" %>
      </div>
    <% end %>

    <div class="pokemon-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
