<div class="pokemon-login-container">
  <div class="pokemon-card">
    <h2 class="pokemon-title">Log In</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pokemon-form" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Email",
                    input_html: { autocomplete: "email", class: "pokemon-input" } %>

        <%= f.input :password,
                    required: false,
                    label: "Password",
                    input_html: { autocomplete: "current-password", class: "pokemon-input" } %>

        <%= f.input :remember_me, as: :boolean, label: "Remember Me", class: "pokemon-checkbox" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "âš¡ Log In!", class: "pokemon-button" %>
      </div>
    <% end %>

    <div class="pokemon-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
